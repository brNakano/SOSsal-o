<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.schedule.FormScheduleActivity">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/icon_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintBottom_toTopOf="@+id/form_schedule_month"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/form_data_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bottom_shadow"
        android:text="Data"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/form_schedule_month"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_data" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/form_schedule_day"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        android:hint="Dia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/form_schedule_month"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:hint="Mês"
        app:layout_constraintEnd_toStartOf="@+id/form_schedule_year"
        app:layout_constraintStart_toEndOf="@id/form_schedule_day"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/form_schedule_year"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="20dp"
        android:hint="Ano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="115dp"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/icon_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_clock"
        app:layout_constraintTop_toBottomOf="@id/form_schedule_month"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/form_time_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bottom_shadow"
        android:text="Horário"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/form_schedule_month"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_time" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/form_schedule_hour"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:hint="Hora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form_time_label">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/form_schedule_minute"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:hint="Minuto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form_time_label">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="115dp"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/icon_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toBottomOf="@id/form_schedule_hour"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/form_client_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bottom_shadow"
        android:text="Cliente"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/form_schedule_hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_time" />

    <TextView
        android:id="@+id/form_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="4dp"
        android:text="Nome do Cliente"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/form_client_label"
        app:layout_constraintStart_toEndOf="@id/icon_client" />

    <Button
        android:id="@+id/client_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form_client_label"
        android:text="Selecionar"
    />

    <ImageView
        android:id="@+id/icon_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toBottomOf="@id/form_client_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/form_employee_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bottom_shadow"
        android:text="Funcionário"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/form_client_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_time" />

    <TextView
        android:id="@+id/form_employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="4dp"
        android:text="Nome do Funcionário"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/form_employee_label"
        app:layout_constraintStart_toEndOf="@id/icon_employee" />

    <Button
        android:id="@+id/employee_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form_employee_label"
        android:text="Selecionar"
        />

    <RadioGroup
        android:id="@+id/form_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/form_marcado"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/form_employee_name">

        <RadioButton
            android:id="@+id/form_atendido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atendido" />

        <RadioButton
            android:id="@+id/form_Adiado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adiado" />

        <RadioButton
            android:id="@+id/form_cancelado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelado" />

        <RadioButton
            android:id="@+id/form_marcado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcado" />

    </RadioGroup>


    <Button
        android:id="@+id/form_schedule_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="52dp"
        android:text="Agendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form_status" />

    <Button
        android:id="@+id/form_schedule_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="30dp"

        android:text="Cancelar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_status" />

</androidx.constraintlayout.widget.ConstraintLayout>